# Production environment
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:strong_password@postgres:5432/marketplace?schema=public"

# JWT
JWT_SECRET="change-this-to-a-strong-random-secret-in-production"
JWT_REFRESH_SECRET="change-this-to-another-strong-random-secret"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis
REDIS_HOST="redis"
REDIS_PORT=6379
REDIS_TTL=3600

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN="https://yourdomain.com"
